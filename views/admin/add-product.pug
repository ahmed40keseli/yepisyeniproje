extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet" href="/css/forms.css")

block content
  .container.mt-5
    h1 Record New Book
    form(action="/admin/add-product" method="POST")
      //- Author Name
      .form-group.row
        label.col-sm-2.col-form-label(for="writername") Writer Name
        .col-sm-10
          input.form-control(type="text" name="writername")

      //- Book Name
      .form-group.row
        label.col-sm-2.col-form-label(for="bookname") bookName
        .col-sm-10
          input.form-control(type="text" name="bookname")

      .form-group.row
            label(for="categoryid").col-sm-2.col-form-label Category
            .col-sm-10
                select.form-control#categoryid(name="categoryid")
                    option(value="-1") Select Category
                    each category in categories
                        option(value=`${category.id}`) #{category.name}

      .form-group.row
        .col-sm-10.offset-sm-2
          input.btn.btn-primary(type="submit" value="Save Product")